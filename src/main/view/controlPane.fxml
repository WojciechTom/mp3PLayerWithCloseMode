<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ControlPaneController">
   <children>
      <HBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
            <Button id="prev-button-css" fx:id="PrevButton" mnemonicParsing="false">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
            <Button id="play-button-css" fx:id="PlayStopButton" mnemonicParsing="false">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
            <Button id="next-button-css" fx:id="NextButton" mnemonicParsing="false">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
            <VBox HBox.hgrow="NEVER">
               <children>
                  <Label fx:id="VolumeLabel" text="Label" VBox.vgrow="NEVER" />
                  <Slider fx:id="VolumeSlider" VBox.vgrow="NEVER" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="SongTimeLabel" text="Label" VBox.vgrow="ALWAYS" />
                  <Slider fx:id="SongTimeSlider" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
